<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <TextView
            android:id="@+id/add_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Item"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/primary_navy"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/add_item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill in the details below"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="24dp" />

        <!-- Item Name Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/item_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_item_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Item Name"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Item Quantity Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/item_quantity_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_item_quantity"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Quantity"
                android:inputType="number"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Item Category Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/item_category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/et_item_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Category"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:completionThreshold="0"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Serial Number Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/item_serial_number_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_item_serial_number"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Serial Number (optional)"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Status Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/item_status_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/et_item_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Status"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:completionThreshold="0"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Item Description Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/item_description_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_item_description"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Item Description (optional)"
                android:inputType="textMultiLine"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:gravity="top"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Cancel Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:textSize="14sp"
                app:backgroundTint="@color/text_secondary"
                app:cornerRadius="8dp"
                android:layout_marginEnd="8dp" />

            <!-- Add Item Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_item"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Add Item"
                android:textSize="14sp"
                app:backgroundTint="@color/primary_navy"
                app:cornerRadius="8dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>