<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <TextView
            android:id="@+id/create_borrow_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Borrow List"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/primary_navy"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/create_borrow_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill in borrower and item details"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="24dp" />

        <!-- Borrower Name Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/borrower_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_borrower_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Borrower Name"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Phone Number Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/borrower_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_borrower_phone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Phone Number"
                android:inputType="phone"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Department Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/borrower_department_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/et_borrower_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Department"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:completionThreshold="0"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Classroom Number Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/borrower_classroom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_borrower_classroom"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Classroom Number"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Item Selection Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/borrow_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/et_borrow_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Item to Borrow"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:completionThreshold="0"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Quantity Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/borrow_quantity_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_borrow_quantity"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Quantity to Borrow"
                android:inputType="number"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Notes Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/borrow_notes_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_borrow_notes"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Notes (optional)"
                android:inputType="textMultiLine"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:gravity="top"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Cancel Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel_borrow"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:textSize="14sp"
                app:backgroundTint="@color/text_secondary"
                app:cornerRadius="8dp"
                android:layout_marginEnd="8dp" />

            <!-- Create Borrow List Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_create_borrow_list"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Confirm"
                android:textSize="14sp"
                app:backgroundTint="@color/primary_navy"
                app:cornerRadius="8dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>