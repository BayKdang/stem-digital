<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to StemDigital"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/primary_navy"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage your STEM inventory efficiently"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="24dp" />

        <!-- Statistics Cards Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <TextView
                    android:id="@+id/total_items_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_navy"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Items in Inventory"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Quick Actions Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Actions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_navy"
            android:layout_marginBottom="12dp" />

        <!-- Create Borrow List Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create_borrow"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Create Borrow List"
            android:textSize="16sp"
            app:backgroundTint="@color/primary_navy"
            app:cornerRadius="8dp"
            android:layout_marginBottom="12dp" />

        <!-- View Inventory Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_view_inventory"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="View Inventory"
            android:textSize="16sp"
            app:backgroundTint="@color/secondary_grey"
            app:cornerRadius="8dp"
            android:layout_marginBottom="24dp" />

        <!-- Recent Borrow List Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Borrow Lists"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_navy"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp" />

        <!-- RecyclerView for Recent Borrow Lists -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recent_borrow_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_borrow_list" />

        <!-- Empty State Message -->
        <LinearLayout
            android:id="@+id/empty_state_container"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/empty_state_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No borrow lists yet.  Create your first borrow list!"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:padding="16dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>